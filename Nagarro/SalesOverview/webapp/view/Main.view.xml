<mvc:View controllerName="zsd_sales_ovw.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:table="sap.ui.table">

    <Page enableScrolling="false">
        <customHeader>
            <Toolbar>
                <!-- <Image src="images/jindal.png" width="40px" height="40px" /> -->
                <ToolbarSpacer />
                <Title text="Sales Overview" level="H1" class="sapUiTinyMarginBegin" />
                <ToolbarSpacer />
            </Toolbar>
        </customHeader>
        <content>
            <Toolbar >
            </Toolbar>
            <IconTabBar expanded="true" expandable="false" headerMode="Inline" select=".onTabSelect">
                <items>
                    <IconTabFilter id="tabCurrent" text="Current Year Overview" key="current" class="IconTabBar" showAll="true">
                        <mvc:XMLView viewName="zsd_sales_ovw.view.Overview" />
                    </IconTabFilter>
                    <IconTabFilter id="tabHistorical" text="Historical Overview" key="historical" showAll="true">
                        <mvc:XMLView viewName="zsd_sales_ovw.view.Historical" />
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>

        <footer>
        </footer>
    </Page>
</mvc:View>
