<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog
        id="fieldDialog"
        title="Hide / Show Columns"
        contentWidth="450px"
        contentHeight="500px"
        stretch="{device>/system/phone}"
        resizable="true"
        draggable="true"
        class="p13nDialogHeader">
        <content>
            <!-- Top Toolbar -->
            <Toolbar>
                <SearchField width="50%" liveChange=".onFieldSearch"/>
                <ToolbarSpacer/>
                <Label text="Hide (All) Unselected"/>
                <Switch change=".onHideUnselected"/>
            </Toolbar>
            <!-- Field Counter Toolbar -->
            <Toolbar class="p13nHeaderToolbar">
                <Button id="clearAllBtn" icon="sap-icon://clear-all" type="Default" class="p13nClearBtn" tooltip="Unselect All" press=".onUnselectAll"/>
                 <Text id="fieldCounterTitle" text="Field (0/0)"/>
            </Toolbar>
            <!-- Field List -->
            <List id="fieldList" mode="MultiSelect" includeItemInSelection="true" selectionChange=".updateFieldCounter"/>
        </content>
        <beginButton>
            <Button text="OK" type="Emphasized" press=".onFieldConfirm"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onFieldCancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>